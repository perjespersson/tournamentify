<div class="d-flex justify-content-center">
  <div class="col-box">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :login, autofocus: true, placeholder: "Username/email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-success full-width-btn" %>
      </div>
    <% end %>

    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "devise-link" %>

    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "devise-link" %>

    <hr />

    <p class="devise-text">Don't have an account?</p>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "devise-link" %>
  </div>
</div>