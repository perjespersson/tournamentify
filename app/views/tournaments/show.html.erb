<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Lag</th>
      <th scope="col">SM</th>
      <th scope="col">VM</th>
      <th scope="col">OM</th>
      <th scope="col">FM</th>
      <th scope="col">GM</th>
      <th scope="col">IM</th>
      <th scope="col">MS</th>
      <th scope="col">P</th>
    </tr>
  </thead>
  <tbody>
    <% @table.each_with_index do |row, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= row["username"] %></td>
        <td><%= row["played_games"] %></td>
        <td><%= row["won_games"] %></td>
        <td><%= row["tied_games"] %></td>
        <td><%= row["lost_games"] %></td>
        <td><%= row["scored_goals"] %></td>
        <td><%= row["conceded_goals"] %></td>
        <td><%= row["goal_difference"] %></td>
        <td><%= row["points"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr />

<% @games.each do |game| %>
  <div class="col col-box">
    <h5 style="text-align: center"><%= game.home_team.username %> -  <%= game.away_team.username %></h5>
    <p style="text-align: center"><%= game.home_fifa_team %> -  <%= game.away_fifa_team %></p>
    <h6 style="text-align: center"><%= game.home_team_score.present? ? game.home_team_score : 0 %> -  <%= game.away_team_score.present? ? game.away_team_score : 0 %></h6>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Slumpa lag
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog col-box">
        <div class="modal-content" style="background-color: transparent;">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="input-group mb-3">
              <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>

            <div class="input-group mb-3">
              <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" placeholder="League">
            </div>

            <div class="input-group mb-3">
              <input type="number" class="form-control" placeholder="Minimum stars" aria-label="Server" min="0" max="5" step="0.5">
              <input type="number" class="form-control" placeholder="Maxiumum stars" aria-label="Username" min="0" max="5" step="0.5">
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" checked>
              <label class="form-check-label" for="inlineRadio1">MÃ¤n</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
              <label class="form-check-label" for="inlineRadio2">Kvinnor</label>
            </div>
          </div>


          <%= form_with url: tournaments_path, method: :post do |form| %>
            <%= form.select :user_ids, FifaTeam.distinct.pluck(:league), {}, {multiple: true, include_blank: false, data: {controller: "slim"}} %>

            <%= form.submit "Create" %>
          <% end %>



          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>


              <form data-controller="fifa-team">
  <input type="text" data-target="fifa-team.input" />
  <button type="submit">Submit</button>
</form>

  </div>
<% end %>

<%= will_paginate @games %>

